<div class="home-header">
    <div class="home-header-logo">
        <img src="{{ asset('uploads/sweatshirts/logo.png') }}" alt="Logo Stubborn" width="150">
        <h3>Des Sweatshirts pour tous !</h3>
    </div>
    <div class="home-header-nav">
            <a href="{{ path('app_home') }}">Accueil</a><br>
            <a href="{{ path('app_shop') }}">Boutique</a><br>
            <a href="{{ path('cart_show') }}">Panier</a>
            <br><br>
            <a href="{{ path('app_logout') }}">Se déconnecter</a><br><br>
    </div>
</div>
<hr>

<div class="product-container">
    <div class="product-img">
        <img src="{{ asset('uploads/sweatshirts/' ~ sweat.image) }}" alt="{{ sweat.name }}" width="220">
    </div>
    <div class="product-details">
        <h1>{{ sweat.name }}</h1>
        <p><strong>Prix :</strong> {{ sweat.price }} €</p>

        <table class="stock-table">
            <tr>
                <th>Taille</th>
                <th>Quantité</th>
            </tr>
            {% for stock in stocks %}
                <tr>
                    <td>{{ stock.size }}</td>
                    <td>{{ stock.quantity }}</td>
                </tr>
            {% endfor %}
        </table>

        <form method="post" action="{{ path('cart_add', { id: sweat.id }) }}" class="add-cart-form">
            <label for="taille"><strong>Taille :</strong></label>
            <select name="taille" id="taille" required>
                <option value="">Sélectionnez une taille</option>
                {% for stock in stocks %}
                    <option value="{{ stock.size }}">{{ stock.size }}</option>
                {% endfor %}
            </select>
            <button type="submit" class="add-cart-btn">Ajouter au panier</button>
        </form>
    </div>
</div>

